<%- include('partials/header.ejs') %>
<main>
  <!-- Here goes the todo list -->
  <div class="task-layout">
    <div class="actions">
      <form class="new-task-form" action="/submit" method="POST">
        <input
          class="task-input"
          type="text"
          name="newTask"
          placeholder="Enter new task"
        />
        <input class="add-input" type="submit" value="Add" />
      </form>
      <form class="clear-tasks-form" action="/" method="POST">
        <input class="clear-input" type="submit" value="Clear All" />
      </form>
    </div>
    <ul class="tasks-list">
      <% if(locals.taskArray){ for(let i = taskArray.length - 1; i>-1; i--){%>
      <li
        class="task item-<%= taskArray[i][0]%4 %> <%= taskArray[i][0] === 0 ? 'first-task' : '' %>"
      >
        <p class="task-text"><%= taskArray[i][1] %></p>
        <svg
          class="check-icon hidden"
          xmlns="http://www.w3.org/2000/svg"
          x="0px"
          y="0px"
          width="30"
          height="30"
          viewBox="0 0 50 50"
        >
          <path
            d="M 25 2 C 12.309534 2 2 12.309534 2 25 C 2 37.690466 12.309534 48 25 48 C 37.690466 48 48 37.690466 48 25 C 48 12.309534 37.690466 2 25 2 z M 25 4 C 36.609534 4 46 13.390466 46 25 C 46 36.609534 36.609534 46 25 46 C 13.390466 46 4 36.609534 4 25 C 4 13.390466 13.390466 4 25 4 z M 34.988281 14.988281 A 1.0001 1.0001 0 0 0 34.171875 15.439453 L 23.970703 30.476562 L 16.679688 23.710938 A 1.0001 1.0001 0 1 0 15.320312 25.177734 L 24.316406 33.525391 L 35.828125 16.560547 A 1.0001 1.0001 0 0 0 34.988281 14.988281 z"
          ></path>
        </svg>
      </li>
      <% }}%>
    </ul>
  </div>
</main>
